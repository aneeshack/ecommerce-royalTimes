                                                            <% } else if (product?.status==='Return Requested' ) { %>
                                                                <span class="text-danger">Return Requested</span>
                                                                <% } else if
                                                                    (product?.status==='return request accepted' ) { %>
                                                                    <span class="text-success">Return Request
                                                                        Accepted</span>
                                                                    <% } else if
                                                                        (product?.status==='return request rejected' ) {
                                                                        %>
                                                                        <span class="text-danger">Return Request
                                                                            Rejected</span>
                                                                            <% } else if
                                                                        (product?.status==='product returned' ) {
                                                                        %>
                                                                        <span class="text-danger">Product Returned
                                                                            </span>
                                                                        <% }else{ %>
                                                                            <%= product?.status %>
                                                                                <% } %>
                                                    </td>
                                                    <td>
                                                        <%= orderItem.paymentMethod %>
                                                    </td>
                                                <td>
                                                    <% if(orderItem.couponDiscount<=0){%>
                                                        <% if (product.status==='Delivered' ) { %>
                                                            <button class="btn btn-danger btn-sm" id="returnBtn"
                                                                onclick="showReturnModal('<%= orderItem._id %>', '<%= product.productId._id %>')">Return</button>

                                                                <!-- Return Modal -->
